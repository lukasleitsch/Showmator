<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <!-- TODO make static server -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/live.css">
  <title>Live-Shownotes</title>
</head>
<body class="container">
  
<h1>Live-Shownotes</h1>
<input type="checkbox" name="auto" id="auto"> <label for="auto">Neue Links automatisch Ã¶ffnen</label> | Aktuelle Betrachter: <span id="counter"></span> | Seite aktualisiert automatisch
<div id="info"></div>
<div id="result" style="padding-top: 30px;">
  <% items.forEach(function(item) { %>
    <% if (item.url != 'null') { %>
      <p><a href="<%= item.url %>" target="_blank"><%= item.title %></a></p>
    <% } else { %>
      <p><%= item.title %></p>
    <% } %>
  <% }); %>
</div>
<hr>
<a href="https://leitsch.org/projects/showmator" target="_blank">Shownotes were created with Showmator</a>


<script src="http://code.jquery.com/jquery-2.1.0.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<!-- TODO make static server -->
<script src="/js/live.js"></script>
<script>
  var socket = io.connect('http://localhost:63685');

  socket.on('connect', function () {
    socket.emit('live', '<%= slug %>');
  });

  socket.on('push', function(data){
    console.log(data.url);
    if ($('#auto').is(":checked") && data.url != null){
      window.open(data.url, '_blank');
    }
    
    if(data.url != null){
      $('#result').prepend('<p><a href="'+data.url+'" target="_blank">'+data.title+'</a></p>');
    } else {
      $('#result').prepend('<p>'+data.title+'</p>');
    }
    
    $('.leer').fadeOut(3000);

  });

  socket.on('counter', function(data){
    $('#counter').html(data);
  });

  socket.on('reload', function(){
     location.reload();
  });

  $(document).ready(function(){
    if($('#result').children().children().length == 0){
      $('#info').html('<div class="leer alert alert-warning">Bitte noch etwas Geduld. Im Moment sind noch keine Shownotes eingetragen.</div>');
    }
  });
</script>

</body>
</html>